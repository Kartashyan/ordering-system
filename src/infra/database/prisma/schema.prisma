datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ProductItem {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  quantity    Int      @default(1)
  price       Float
  createdAt   DateTime @default(now())
  order       Order[]
}

model Order {
  id        String      @id @default(cuid())
  status    String      @default("Pending")
  createdAt DateTime    @default(now())
  items ProductItem[] 
}

